<style>
  .slideshow1 {
    display: flex;
    align-items: center;
    height: 100vh;


    /*

   position: absolute; 
   top: 0; 
   left: 0; 
*/
  }
  .slideshow-content {
    color: white;
    text-align: center;
  }
  .slideshow-content .content-title {
    font-weight: bold;
    font-size: 49px;
    line-height: 59px;
  }
  .slideshow-content h2 {
    font-size: 3rem;
  }
  .slideshow-group {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  .slideshow-group .item-group {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    flex-direction: column;
  }
  .video-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    object-fit: cover;
  }

  #bg-video {
    object-fit: cover;
    width: 100%;
    height: 100%;
  }
  .buttongroup-item {
    text-decoration: none;
  }

</style>

<div class="slideshow1">
  <div class="slideshow-group">
    {% if section.settings.video %}
      <video
        autoplay
        muted
        loop
        class="video-background">
        <source src="{{ section.settings.video | file_url }}" type="video/mp4">
      </video>
    {% else %}
      <p>Video not selected.</p>
    {% endif %}
    <div class="item-group">
      <div class="slideshow-content">
        <p>WELCOME TO THE</p>
        <p class="content-title">
          CHRISTMAS<br>ACADEMY
        </p>
      </div>
      <div class="slideshow-button">
        <a href="#" class="buttongroup-item">SHOP MENS</a>
        <a href="#" class="buttongroup-item">SHOP WOMENS</a>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Slideshow Section",
  "settings": [
    {
      "type": "url",
      "id": "video",
      "label": "Video URL"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "WELCOME TO THE CHRISTMAS ACADEMY"
    }
  ]
}
  {% endschema %}
  